<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:contentV="clr-namespace:Chess.contentView"
             x:Class="Chess.contentView.viewLeaderBoard"
             x:Name="root">

    <!-- CrÃ©ation de la content view pour la page LeaderBoard -->

    <VerticalStackLayout
        HorizontalOptions="Center"
        VerticalOptions="Center">
        <Frame BackgroundColor="#A58056" BorderColor="White" CornerRadius="0">
            <FlexLayout
                VerticalOptions="Center"
                WidthRequest="300"
                JustifyContent="SpaceBetween">

                <Image Source="certif.png"
                           HeightRequest="30"
                           WidthRequest="30"
                           Margin="8, 8, 0, 0"
                           />

                <Label Text="{Binding Pseudo}"
                           FontSize="25"
                           Margin="5"
                           />

                <Label Text="{Binding ScoreWithSuffix}"
                           FontSize="25"
                           TextColor="Gold"
                           Margin="5"
                           />
            </FlexLayout>
        </Frame>
    </VerticalStackLayout>

</ContentView>
