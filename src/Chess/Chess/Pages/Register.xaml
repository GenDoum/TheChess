<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Chess.Pages.Register"
             BackgroundImageSource="test.jpg">
             
    <ContentPage.Content>
        <FlexLayout
            JustifyContent="Center"
            AlignItems="Center"
            Direction="Column"
            >


            <Image 
                Source="inscription.png" 
                Style="{StaticResource imgAppli}"
                />
            
            <Entry Placeholder="Entrez votre pseudo" Style="{StaticResource entryStyleDefault}"/>
            <Entry Placeholder="Entrez votre mot de passe" IsPassword="True" Style="{StaticResource entryStyleDefault}" MaxLength="20"/>
            <Entry Placeholder="Entrez a nouveau votre mot de passe" IsPassword="True"  Style="{StaticResource entryStyleDefault}" MaxLength="20"/>

            <Button 
               Text="Inscription" Style="{StaticResource buttonSyle}"/>
        </FlexLayout>
    </ContentPage.Content>
</ContentPage>