                            Grid.Row="5"
                            Grid.ColumnSpan="2"
                            RowDefinitions="auto ,auto"
                            ColumnDefinitions="*,*"
                            >

                            <Frame Style="{StaticResource FrameRules}"
                               Grid.Row="0"
                               Grid.Column="0"
                               MaximumHeightRequest="250">
                                <VerticalStackLayout BackgroundColor="#a58056">
                                    <Label Text="Les règles du jeu - Le déplacement des pièces :"
