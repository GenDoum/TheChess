<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Chess.Pages.pausePage"
             BackgroundColor="#A58056">
    
    <ContentPage.Content>
        <AbsoluteLayout
            MaximumWidthRequest="600"
            MaximumHeightRequest="600">
            
            <FlexLayout
                JustifyContent="Center"
                AlignItems="Center"
                Direction="Column"
                AbsoluteLayout.LayoutBounds="0.5,0.5,AutoSize,AutoSize"
                AbsoluteLayout.LayoutFlags="PositionProportional">
                
                <Image  Source="pause.png" 
                        Style="{StaticResource imgAppli}"/>

                <Button Text="Reprendre" Style="{StaticResource buttonPauseStyle}"/>
                <Button Text="Quitter" Style="{StaticResource buttonPauseStyle}"/>
                
            </FlexLayout>
            
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>